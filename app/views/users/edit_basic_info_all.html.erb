<% provide(:class_text, 'basic-info-all') %>
<% provide(:button_text, '更新') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <h1> 基本情報編集 </h1>
    </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_info_all_user_path(@user), method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>

            <%= f.label :basic_time, class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :basic_time, class: "form-control" %>

            <%= f.label :work_time, class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :work_time, class: "form-control" %>

            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              
            </div>
          <% end %>
        </div>
      </div>
</div>

